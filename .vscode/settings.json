{
  // Project-specific settings
  "files.associations": {
    "*.genai.mjs": "javascript",
    "*.genai.mts": "typescript",
    "*.genai.js": "javascript",
    "*.genai.ts": "typescript"
  },
  
  // Editor settings optimized for this project
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.rulers": [100],
  "editor.defaultFormatter": "esben.prettier-vscode",
  "editor.bracketPairColorization.enabled": true,
  
  // Customize editor based on file type
  "[javascript]": {
    "editor.defaultFormatter": "esben.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esben.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esben.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esben.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esben.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esben.prettier-vscode",
    "editor.wordWrap": "on"
  },
  
  // Project-specific path configurations
  "typescript.tsdk": "node_modules/typescript/lib",
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/out": true,
    "**/.next": true,
    "**/.yarn": true
  },
  
  // Auto-lock groups for this workspace
  "workbench.editor.autoLockGroups": {
    "terminalEditor": true,
    "default": true,
    "workbench.editorinputs.searchEditorlnput": true,
    "mainThreadWebview-markdown.preview": true,
    "jupyter-notebook": true
  },
  
  // Terminal settings
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  
  // VS Code tasks configuration
  "task.autoDetect": "on",
  
  // Git & GitHub integration
  "git.autofetch": true,
  "git.confirmSync": false,
  "github-actions.workflows.pinned.workflows": [".github/workflows/ci.yml"],
  
  // Azure settings
  "azure.resourceFilter": [],
  
  // Specific settings for the GenAIScript project
  "eslint.validate": ["javascript", "typescript"],
  "eslint.workingDirectories": [
    "./packages/cli",
    "./packages/core",
    "./packages/vscode"
  ]
}
